<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem name="产品" id="project_product_menu" parent="project.menu_main_pm" sequence="1"/>

    <menuitem id="project.menu_projects" name="项目" parent="project.menu_main_pm" sequence="2"/>

    <menuitem action="project.open_view_project_all" id="project.menu_all_projects" name="所有项目" parent="project.menu_projects" sequence="1"/>

    <menuitem name="所有任务" id="project.menu_project_management" parent="project.menu_projects"
            action="project.action_view_task" sequence="2" groups="base.group_no_one,project.group_project_user"/>


    <menuitem name="产品配置" id="product_config_menu" parent="project.menu_project_config" sequence="2"/>

    <menuitem name="项目配置" id="project_config_menu" parent="project.menu_project_config" sequence="3"/>

    <template id="odoo_project_assets_backend" name="odoo project assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/project/static/src/scss/project_dashboard.scss"/>
        </xpath>
    </template>

</odoo>