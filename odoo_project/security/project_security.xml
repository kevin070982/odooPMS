<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="main_groups">
        <field name="name">PMS项目管理</field>
        <field name="visible" eval="0"/>
        <field name="sequence">3</field>
    </record>

    <record id="group_user" model="res.groups">
        <field name="name">用户</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="odoo_project.main_groups"/>
    </record>

    <record id="group_manage" model="res.groups">
        <field name="name">管理员</field>
        <field name="implied_ids" eval="[(4, ref('odoo_project.group_user'))]"/>
        <field name="category_id" ref="odoo_project.main_groups"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record model="ir.module.category" id="product_main_groups">
        <field name="name">PMS产品管理</field>
        <field name="visible" eval="0"/>
        <field name="sequence">3</field>
    </record>

    <record id="product_group_user" model="res.groups">
        <field name="name">用户</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="odoo_project.product_main_groups"/>
    </record>

    <record id="product_group_manage" model="res.groups">
        <field name="name">管理员</field>
        <field name="implied_ids" eval="[(4, ref('odoo_project.product_group_user'))]"/>
        <field name="category_id" ref="odoo_project.product_main_groups"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record model="ir.module.category" id="pms_other_groups">
        <field name="name">PMS额外权限</field>
        <field name="visible" eval="0"/>
        <field name="sequence">4</field>
    </record>

    <record id="review_demand_group" model="res.groups">
        <field name="name">评审产品需求</field>
        <field name="implied_ids" eval="[(4, ref('odoo_project.product_group_user'))]"/>
        <field name="category_id" ref="odoo_project.pms_other_groups"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    <record id="closed_demand_group" model="res.groups">
        <field name="name">关闭产品需求</field>
        <field name="implied_ids" eval="[(4, ref('odoo_project.product_group_user'))]"/>
        <field name="category_id" ref="odoo_project.pms_other_groups"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    <record id="activation_demand_group" model="res.groups">
        <field name="name">激活产品需求</field>
        <field name="implied_ids" eval="[(4, ref('odoo_project.product_group_user'))]"/>
        <field name="category_id" ref="odoo_project.pms_other_groups"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

</odoo>
